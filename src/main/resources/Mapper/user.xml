<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.notebook.dao.userMapper">

    <resultMap id="UserResultMap" type="org.example.notebook.pojo.user">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="avatar" column="avatar"/>
    </resultMap>

    <select id="findByUsernameAndPassword" resultMap="UserResultMap">
        SELECT * FROM users WHERE username = #{username} AND password = #{password}
    </select>

    <select id="findByUsername" resultMap="UserResultMap">
        SELECT * FROM users WHERE username = #{username}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users (username, password, avatar)
        VALUES (#{username}, #{password}, #{avatar})
    </insert>

    <select id="findById" resultMap="UserResultMap">
        SELECT * FROM users WHERE id = #{id}
    </select>

    <update id="updateUserAvatar">
        UPDATE users SET avatar = #{avatarUrl} WHERE id = #{userId}
    </update>

    <update id="updateUserPassword">
        UPDATE users SET password = #{password} WHERE id = #{userId}
    </update>

</mapper>
